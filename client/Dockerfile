# Etapa de desarrollo
FROM node:22-alpine AS dev

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .

EXPOSE 5274
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5274"]

# Etapa de producci√≥n
FROM node:22-alpine

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build

RUN npm install -g serve

EXPOSE 5274
CMD ["serve", "-s", "dist", "-l", "3000"]